{
  "name": "vue-video",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "server": "npx nodemon server/bin/www",
    "server-prd": "pm2 start server/bin/www",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}",
    "deploy": "bash deploy.sh"
  },
  "dependencies": {
    "@better-scroll/core": "^2.4.2",
    "@better-scroll/nested-scroll": "^2.4.2",
    "@better-scroll/observe-dom": "^2.4.2",
    "@better-scroll/pull-up": "^2.4.2",
    "@better-scroll/slide": "^2.4.2",
    "@vant/use": "^1.4.2",
    "@vueuse/core": "^9.1.0",
    "axios": "^0.27.2",
    "cheerio": "1.0.0-rc.12",
    "dayjs": "^1.11.4",
    "debug": "^4.3.4",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.2.0",
    "koa-router": "^12.0.0",
    "normalize.css": "^8.0.1",
    "pinia": "^2.0.17",
    "sass": "^1.54.4",
    "vant": "^3.5.4",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "postcss-px-to-viewport-8-plugin": "^1.1.5",
    "prettier": "^2.7.1",
    "qs": "^6.11.0",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.10.3",
    "unplugin-vue-components": "^0.21.2",
    "vconsole": "^3.14.6",
    "vite": "^3.0.9",
    "vite-plugin-vconsole": "^1.2.2",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "^0.38.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write"
    ]
  }
}
